@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>
<div>
    @if (!Model.IsGitHubLinked)
    {
        <form method="post">
            <button type="submit" asp-page-handler="LinkGitHub" class="btn btn-primary">Link GitHub Account</button>
        </form>
    }
    else
    {
        <p>GitHub linked as: <strong><a href="https://github.com/@Model.GitHubName">@Model.GitHubName</a></strong> <i>(@Model.GitHubId)</i></p>
        <form method="post">
            <button type="submit" asp-page-handler="RemoveGitHubLink" class="btn btn-danger">Remove GitHub Link</button>
        </form>
    }
</div>
